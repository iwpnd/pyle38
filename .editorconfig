# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
tab_width = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.{yaml,yml,json}]
charset = utf-8
tab_width = 2
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[LICENSE]
insert_final_newline = false
